<div class='basic_item'>
	<h3><%= link_to "#{item.title}", correct_item_path(local_assigns) %></h3>
	<p>
		<span class="info_span"><b>bh#</b> <%= item.bhsku %></span>
		<span class="info_span"><b>mfr#</b> <%= item.mfrsku %></span>  
		<span class="info_span"><b>updated_at:</b> <%= item.updated_at %></span>  
		<span class="info_span"><b>created at:</b> <%= item.created_at %></span>
		<%= link_to 'edit item', edit_item_path(item) %>
	</p>

	<%= render partial: 'tags/tags', locals: {:taggable_item => item} %>
</div>



