<div class="questions_and_answers">
	<span class="question_title">Q: <%= question.content %></span>
	
	<% if question.answers_count > 0 %>
		<details>
			<summary><%=  "#{question.answers.count} answers available" %></summary>
			<%= render partial: 'answers/answer', collection: question.answers, as: :answer %>
		</details>
	<% else %>
		 <div class="low_profile">not yet answered</div>
	<% end %>
	
	<br>
	<%= render partial: 'answers/answer_form', locals: {:question => question, :answer => question.answers.build} %>
	<hr>
</div>