<h1>Categories#show</h1>

<%= render partial: 'category', locals: {:category => @category} %>

<h2>Items</h2>
<%= render partial: 'items/item', collection: @category.items, as: :item %>


<h3>add item</h3>
<%= form_for([@category, @category.build_item]) do |f| %>
	<%= render partial: 'items/form', locals: {:f => f} %>
<% end %>
